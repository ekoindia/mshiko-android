<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context="in.co.eko.fundu.fragments.IdentificationFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            >

            <in.co.eko.fundu.views.customviews.CustomTextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/sp22"
                android:textColor="@color/topaz_two"
                app:fontname="Muli-Regular.ttf"
                android:text="@string/change_fundu_pin" />


            <in.co.eko.fundu.views.customviews.CustomTextView
                android:id="@+id/textView9"
                android:layout_below="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                app:fontname="Muli-SemiBold.ttf"
                android:text="@string/please_change_fundu_pin_desp" />


            <LinearLayout android:layout_below="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <in.co.eko.fundu.views.customviews.CustomTextView
                                android:textSize="@dimen/sp16"
                                android:layout_gravity="center"
                                android:textColor="@color/Black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:fontname="Muli-SemiBold.ttf"
                                android:text="@string/enter_current_pin" />

                            <!--<EditText
                                android:id="@+id/oldPin"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="13"
                                android:textColorHint="@color/black_38"
                                android:digits="0123456789"
                                android:imeOptions="actionNext"
                                android:inputType="numberPassword"
                                android:maxLength="4"
                                android:hint="####"/>-->

                            <in.co.eko.fundu.views.Pinview
                                android:id="@+id/oldPin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cursorVisible="true"
                                app:hint="0"
                                app:inputType="number"
                                app:password="true"
                                app:pinBackground="@drawable/code_letter_back"
                                app:pinHeight="40dp"
                                app:pinLength="4"
                                app:pinWidth="40dp" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <in.co.eko.fundu.views.customviews.CustomTextView
                                app:fontname="Muli-SemiBold.ttf"
                                android:textSize="@dimen/sp16"
                                android:layout_gravity="center"
                                android:textColor="@color/Black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/enter_new_pin" />
                            <!--<EditText android:id="@+id/newPin"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="13"

                                android:textColorHint="@color/black_38"

                                android:digits="0123456789"
                                android:imeOptions="actionNext"
                                android:inputType="numberPassword"
                                android:maxLength="4"

                                android:hint="####"/>-->

                            <in.co.eko.fundu.views.Pinview
                                android:id="@+id/newPin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cursorVisible="true"
                                app:hint="0"
                                app:inputType="number"
                                app:password="true"
                                app:pinBackground="@drawable/code_letter_back"
                                app:pinHeight="40dp"
                                app:pinLength="4"
                                app:pinWidth="40dp" />



                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <in.co.eko.fundu.views.customviews.CustomTextView
                                app:fontname="Muli-SemiBold.ttf"
                                android:textSize="@dimen/sp16"
                                android:layout_gravity="center"
                                android:textColor="@color/Black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/re_enter_new_pin" />
                            <!--<EditText android:id="@+id/reEnterPin"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="13"

                                android:textColorHint="@color/black_38"

                                android:digits="0123456789"
                                android:imeOptions="actionDone"
                                android:inputType="numberPassword"
                                android:maxLength="4"

                                android:hint="####"/>-->


                            <in.co.eko.fundu.views.Pinview
                                android:id="@+id/reEnterPin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cursorVisible="true"
                                app:hint="0"
                                app:inputType="number"
                                app:password="true"
                                app:pinBackground="@drawable/code_letter_back"
                                app:pinHeight="40dp"
                                app:pinLength="4"
                                app:pinWidth="40dp" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <in.co.eko.fundu.views.customviews.CustomButton
                    android:id="@+id/changePin"
                    style="@style/CommonButtonStyle"
                    android:layout_width="@dimen/dp250"
                    android:layout_height="@dimen/dp55"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/green_button_selector"
                    android:text="@string/change_pin"
                    android:filterTouchesWhenObscured="true"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>