<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <in.co.eko.fundu.views.customviews.CustomTextView
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp15"
        android:textSize="@dimen/sp14"
        app:fontname="Muli-Light.ttf"
        android:gravity="center_horizontal"
        android:textColor="@color/brownish_grey"
        android:layout_gravity="center_horizontal"
        android:id="@+id/transactionCodeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <in.co.eko.fundu.views.customviews.CustomTextView
        android:text="987"

        android:letterSpacing="0.2"
         android:id="@+id/txtTranxCode"
        android:textColor="@color/Black"
        app:fontname="Muli-SemiBold.ttf"
        android:textSize="@dimen/sp70"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <in.co.eko.fundu.views.customviews.CustomTextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/dp10"
        app:fontname="Muli-SemiBold.ttf"
        android:layout_marginTop="@dimen/dp10"
        android:textSize="14sp"
        android:visibility="visible"
        android:id="@+id/cancelTransaction1"
        android:text="@string/cancel_transaction"
        android:layout_marginBottom="@dimen/dp20"
        android:textColor="@color/black_38" />


</RelativeLayout>