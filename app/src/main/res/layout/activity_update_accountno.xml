<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context="in.co.eko.fundu.fragments.IdentificationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Black">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingEnd="30dp">


            <in.co.eko.fundu.views.customviews.CustomTextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center"
                app:fontname="Muli-SemiBold.ttf"
                android:text="@string/desp_update_account_no" />


            <LinearLayout
                android:layout_below="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="30dp"-->
                <!--android:paddingBottom="10dp"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:text="SECURITY QUESTION #"/>-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="40dp"
                    android:paddingTop="50dp"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <in.co.eko.fundu.views.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            app:fontname="Muli-SemiBold.ttf"
                            android:text="@string/new_acc_no" />

                        <EditText
                            android:id="@+id/accno"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="13"
                            android:padding="10dp"
                            android:digits="0123456789"
                            android:inputType="number"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColorHint="@color/black_38"
                            android:imeOptions="actionNext"
                            android:maxLength="10"
                            android:hint="@string/hash" />
                        <!--</LinearLayout>-->
                        <!--<LinearLayout -->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:orientation="vertical">-->
                        <in.co.eko.fundu.views.customviews.CustomTextView
                            app:fontname="Muli-SemiBold.ttf"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="40dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/re_enter_acc_no" />

                        <EditText
                            android:id="@+id/reenteraccno"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="13"
                            android:digits="0123456789"
                            android:inputType="number"
                            android:padding="10dp"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColorHint="@color/black_38"
                            android:imeOptions="actionNext"
                            android:maxLength="10"
                            android:hint="@string/hash" />

                        <in.co.eko.fundu.views.customviews.CustomTextView
                            app:fontname="Muli-SemiBold.ttf"
                            android:layout_marginTop="40dp"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:text="@string/fundu_pin" />

                        <EditText
                            android:id="@+id/funduPinaccno"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="13"
                            android:padding="10dp"
                            android:textColorHint="@color/black_38"
                            android:digits="0123456789"
                            android:imeOptions="actionDone"
                            android:inputType="numberPassword"
                            android:maxLength="4"
                            android:hint="####" />
                    </LinearLayout>

                </LinearLayout>


                <in.co.eko.fundu.views.customviews.CustomButton
                    app:fontname="Muli-SemiBold.ttf"
                    android:layout_width="@dimen/dp250"
                    android:layout_height="@dimen/dp55"
                    android:id="@+id/submit_accno"
                    style="@style/CommonButtonStyle"
                    android:layout_below="@+id/moblile_container"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/green_button_selector"
                    android:text="@string/submit"
                    />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
