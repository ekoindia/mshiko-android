<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context="in.co.eko.fundu.fragments.IdentificationFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Black"/>
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingEnd="30dp"
        >


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/please_reset_fundu_pin_desp" />


        <LinearLayout android:layout_below="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="30dp"-->
            <!--android:paddingBottom="10dp"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:text="SECURITY QUESTION #"/>-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="40dp"
                    android:paddingTop="50dp"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">


                    <LinearLayout android:layout_marginTop="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/enter_new_pin" />
                        <EditText android:id="@+id/newPin"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="13"
                            android:padding="10dp"
                            android:textColorHint="@color/black_38"
                            android:digits="0123456789"
                            android:imeOptions="actionNext"
                            android:inputType="numberPassword"
                            android:maxLength="4"
                            android:hint="####" />
                    </LinearLayout>
                    <LinearLayout android:layout_marginTop="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/re_enter_new_pin" />
                        <EditText android:id="@+id/reEnterPin"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="13"
                            android:padding="10dp"

                            android:textColorHint="@color/black_38"

                            android:digits="0123456789"
                            android:imeOptions="actionDone"
                            android:inputType="numberPassword"
                            android:maxLength="4"

                            android:hint="####" />
                    </LinearLayout>

                </LinearLayout>


            <Button
                android:id="@+id/changePin"
                style="@style/ButtonStyle"
                android:layout_width="130dp"
                android:layout_height="38dp"
                android:layout_below="@+id/moblile_container"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/green_button_selector"
                android:enabled="false"
                android:text="@string/reset_pin"
                android:textAllCaps="true"
                android:filterTouchesWhenObscured="true" />

        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
</ScrollView>

