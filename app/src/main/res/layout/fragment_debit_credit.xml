<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="in.co.eko.fundu.fragments.NetBankingFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:textColor="@color/TitleColor"
        android:text="@string/enter_card_info"
        android:textSize="@dimen/text_sizes_medium"
        android:id="@+id/title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/title"
        android:layout_above="@+id/loadWallet"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/card_number"
                android:id="@+id/textView7" />
            <EditText
                android:id="@+id/cardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:inputType="phone"
                android:maxLength="19"
                android:digits="0987654321-"
                android:hint="XXXX-XXXX-XXXX-XXXX"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginTop="32dp"
                android:text="@string/exp_date"
                android:id="@+id/textView8" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:layout_marginRight="10dp"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:entries="@array/month" />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:entries="@array/year"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:layout_height="wrap_content">
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/cvv_code" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/TitleColor"
                    android:layout_marginLeft="15dp"
                    android:text="@string/what_is_cvv" />
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:inputType="textPassword|number"
                android:maxLength="4"
                android:digits="0987654321"
                android:hint="XXX"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_card_for_future"
                android:checked="true"
                android:id="@+id/checkBox" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/btn_backgrnd_debit_credit"
        android:text="@string/load_wallet"
        android:textAllCaps="true"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:layout_above="@+id/tv_help"
        android:layout_centerHorizontal="true"
        android:textColor="@color/White"
        android:layout_marginBottom="16dp"
        android:id="@+id/loadWallet"
        android:filterTouchesWhenObscured="true" />

      <TextView
        android:id="@+id/tv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/string_help"/>

</RelativeLayout>
