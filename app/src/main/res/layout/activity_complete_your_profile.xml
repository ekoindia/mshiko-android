<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.co.eko.fundu.activities.CompleteYourProfileActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        >

        <in.co.eko.fundu.views.customviews.CustomTextView
            app:fontname="Muli-SemiBold.ttf"
            android:text="@string/compelete_your_profile"
            android:textColor="@color/topaz_two"
            android:textSize="@dimen/sp22"
            android:lineSpacingExtra="1sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </android.support.v7.widget.Toolbar>

    <in.co.eko.fundu.views.customviews.CustomTextView
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp20"
        app:fontname="Muli-SemiBold.ttf"
        android:layout_marginTop="@dimen/dp6"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar"
        android:textSize="@dimen/sp18"
        android:elevation="@dimen/dp5"
        android:textColor="@color/brownish_grey"

        android:gravity="center"
        android:text="@string/complete_profile_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />





    <in.co.eko.fundu.views.CircleImageView
        android:elevation="@dimen/dp5"
        app:srcCompat="@drawable/ic_blank_profile"
        android:id="@+id/img_profile_pic"
        android:layout_width="@dimen/dp200"
        android:layout_height="@dimen/dp200"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:scaleType="fitXY"
        android:elevation="@dimen/dp5"
        android:id="@+id/img_edit_profile_image"
        android:layout_marginRight="@dimen/dp20"
        android:layout_alignRight="@+id/img_profile_pic"
        android:layout_alignBottom="@+id/img_profile_pic"
        app:srcCompat="@drawable/ic_add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



   <in.co.eko.fundu.views.customviews.CustomEditText
       android:singleLine="true"
       android:hint="@string/enter_name"
       android:imeOptions="actionDone"
       android:gravity="center"
       app:fontname="Muli-Regular.ttf"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/img_profile_pic"
       android:textSize="@dimen/sp18"
       android:elevation="@dimen/dp5"
       android:textColor="@color/black_38"
       android:lineSpacingExtra="6sp"
       android:layout_marginTop="@dimen/dp25"
       android:id="@+id/edittext_enter_name"
       android:layout_width="@dimen/dp200"
       android:layout_height="wrap_content" />




    <Button
        android:id="@+id/btn_confirm"
        android:textColor="@color/White"
        android:textSize="@dimen/sp18"
        android:text="@string/confirm"
        android:elevation="@dimen/dp5"
        android:background="@drawable/btn_backgrnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:filterTouchesWhenObscured="true"
        android:layout_marginTop="@dimen/dp21"
        android:layout_below="@+id/edittext_enter_name"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
