<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context="in.co.eko.fundu.fragments.IdentificationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Black">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingEnd="30dp">


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="@string/update_days_and_time_desp" />


            <LinearLayout
                android:layout_below="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="30dp"-->
                <!--android:paddingBottom="10dp"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:text="SECURITY QUESTION #"/>-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="40dp"
                    android:paddingTop="50dp"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:text="@string/shop_opening_time" />

                        <EditText
                            android:id="@+id/editopeningtime"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="13"
                            android:padding="10dp"
                            android:maxLines="1"
                            android:focusable="false"
                            android:singleLine="true"
                            android:textColorHint="@color/black_38"
                            android:imeOptions="actionNext"
                            android:maxLength="22"
                            android:hint="07:00 AM" />

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="40dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shop_closing_time" />

                        <EditText
                            android:id="@+id/editclosingtime"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="13"
                            android:digits="QWERTYUIOPLKJHGFDSAZXCVBNMqwertyuiopasdfghjklzxcvbnm1234567890"
                            android:padding="10dp"
                            android:focusable="false"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColorHint="@color/black_38"
                            android:imeOptions="actionNext"
                            android:maxLength="22"
                            android:hint="08:00 PM" />
                        <!--</LinearLayout>-->
                        <!--<LinearLayout android:layout_marginTop="40dp"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:orientation="vertical">-->
                        <TextView
                            android:layout_marginTop="40dp"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:text="@string/opening_days" />

                        <EditText
                            android:id="@+id/editdays"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="13"
                            android:focusable="false"
                            android:padding="10dp"
                            android:textColorHint="@color/black_38"
                            android:imeOptions="actionDone"
                            android:hint="" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/updateBtn"
                    style="@style/ButtonStyle"
                    android:layout_width="130dp"
                    android:layout_height="38dp"
                    android:layout_below="@+id/moblile_container"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/green_button_selector"
                    android:text="@string/update"
                    android:textAllCaps="false"
                    android:filterTouchesWhenObscured="true"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
