<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <in.co.eko.fundu.views.customviews.CustomTextView
        app:fontname="Muli-SemiBold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="@string/title_social_profiles"
        android:textSize="16sp"

        android:id="@+id/tv_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/iv_social_pic"
        android:layout_marginTop="25dp"
        android:src="@drawable/facebook"
        android:layout_below="@+id/tv_title"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_alignStart="@+id/tv_title" />

    <in.co.eko.fundu.views.customviews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/facebook"
        android:textSize="@dimen/sp16"
        app:fontname="Muli-Light.ttf"
        android:id="@+id/tv_social_text"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@+id/iv_social_pic"
        android:layout_toRightOf="@+id/iv_social_pic"
        android:layout_toEndOf="@+id/iv_social_pic" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignBottom="@+id/iv_social_pic">
    <in.co.eko.fundu.views.customviews.CustomButton
        android:layout_width="150dp"
        android:layout_height="48dp"
        app:fontname="Muli-Light.ttf"
        android:text="@string/button_connected"
        android:enabled="false"
        style="@style/ButtonStyleTwo"
        android:id="@+id/buttonConnect"
        android:textSize="12sp"
        android:filterTouchesWhenObscured="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/ic_check_btn"/>

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_social_pic">



        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/imageView8"
            android:layout_marginTop="25dp"
            android:src="@drawable/google_plus" />

        <in.co.eko.fundu.views.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/google"
            android:textSize="@dimen/sp16"
            app:fontname="Muli-Light.ttf"
            android:id="@+id/textView24"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignBottom="@+id/imageView8"
            android:layout_toRightOf="@+id/imageView8"
            android:layout_toEndOf="@+id/imageView8" />

        <in.co.eko.fundu.views.customviews.CustomButton
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:text="@string/button_connect"
            android:textSize="12sp"
            app:fontname="Muli-Light.ttf"

            android:id="@+id/button2"
            android:layout_alignBottom="@+id/imageView8"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:filterTouchesWhenObscured="true"/>



    </RelativeLayout>
    <View
        android:layout_below="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.7"
        android:layout_marginTop="20dp"
        android:background="@color/DividerColor"/>

</RelativeLayout>