<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="in.co.eko.fundu.activities.TransactionStatusActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp40"
                app:srcCompat="@drawable/ic_cancelled"/>

            <in.co.eko.fundu.views.customviews.CustomTextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp10"
                android:text="@string/transactionCancelled"
                android:textColor="@color/topaz"
                android:textSize="@dimen/sp22"
                app:fontname="Muli-Regular.ttf"/>


            <in.co.eko.fundu.views.customviews.CustomTextView
                android:id="@+id/cancel_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginTop="@dimen/dp30"
                android:gravity="center"
                android:text="@string/transactionnote1"
                android:textColor="@color/brownish_grey"
                android:textSize="@dimen/sp16"
                android:visibility="gone"
                app:fontname="Muli-Regular.ttf"/>


            <LinearLayout
                android:id="@+id/success_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp40"
                    android:orientation="horizontal">


                    <in.co.eko.fundu.views.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp10"
                        android:text="@string/rs_symbol"
                        android:textColor="@color/black87"
                        android:textSize="@dimen/sp22"
                        app:fontname="Muli-Regular.ttf"/>

                    <in.co.eko.fundu.views.customviews.CustomTextView
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/dp10"
                        android:textColor="@color/black87"
                        android:textSize="@dimen/sp36"
                        app:fontname="Muli-Regular.ttf"/>

                </LinearLayout>

                <in.co.eko.fundu.views.customviews.CustomTextView
                    android:id="@+id/txid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp40"
                    android:text="@string/txnid"
                    android:textColor="@color/black87"
                    android:textSize="@dimen/sp15"
                    app:fontname="Muli-Regular.ttf"/>

                <in.co.eko.fundu.views.customviews.CustomTextView
                    android:id="@+id/txdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="@string/date"
                    android:textColor="@color/black_38"
                    android:textSize="@dimen/sp15"
                    app:fontname="Muli-Regular.ttf"/>


            </LinearLayout>


            <in.co.eko.fundu.views.customviews.CustomButton
                android:id="@+id/button"
                android:layout_width="@dimen/dp200"
                android:layout_height="@dimen/dp50"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp35"
                android:background="@drawable/btn_backgrnd"
                android:gravity="center"
                android:tag="1"
                android:text="@string/contact_us"
                android:textColor="@color/White"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:visibility="gone"
                app:fontname="Muli-SemiBold.ttf"/>

            <in.co.eko.fundu.views.customviews.CustomTextView
                android:id="@+id/dismiss"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="@string/dismiss"
                android:textColor="@color/black_38"
                android:textSize="18sp"
                app:fontname="Muli-SemiBold.ttf"/>


        </LinearLayout>

    <include layout="@layout/feedback_botton"></include>



</RelativeLayout>
