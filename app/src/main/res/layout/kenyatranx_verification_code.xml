<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/pair_contact_desc"
        android:layout_margin="@dimen/dp20"
        android:visibility="visible"
        android:id="@+id/kenVerification">
        <in.co.eko.fundu.views.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_verification_code"
            android:textColor="@color/black_38"
            android:layout_marginTop="@dimen/dp10"
            app:fontname="Muli-Regular.ttf"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:id="@+id/verification_code_rl">
            <in.co.eko.fundu.views.Pinview
                android:id="@+id/fPin"
                app:forceKeyboard="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cursorVisible="true"
                app:inputType="number"
                app:password="true"
                app:pinBackground="@drawable/code_letter_back"
                app:pinHeight="43dp"
                app:pinWidth="34dp"
                app:pinLength="4"
                />
        </RelativeLayout>

        <in.co.eko.fundu.views.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_fundu_pin"
            android:textColor="@color/black_38"
            android:layout_marginTop="@dimen/dp10"
            app:fontname="Muli-Regular.ttf"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:id="@+id/fundu_pin_rl">

            <in.co.eko.fundu.views.Pinview
                app:forceKeyboard="false"
                android:id="@+id/confirmPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cursorVisible="true"
                app:inputType="number"
                app:password="true"
                app:pinBackground="@drawable/code_letter_back"
                app:pinHeight="43dp"
                app:pinWidth="34dp"
                app:pinLength="4"
                />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>