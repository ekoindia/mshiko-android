<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">


        <ImageView
            android:padding="@dimen/dp10"
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <in.co.eko.fundu.views.customviews.CustomTextView
            android:id="@+id/textView_referral_title"
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/dp10"
            android:lineSpacingExtra="1sp"
            android:textColor="@color/topaz_two"
            android:textSize="@dimen/sp22"
            app:fontname="Muli-SemiBold.ttf"
            android:text="@string/title_transaction_details" />



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_six"
        android:layout_below="@+id/header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_above="@+id/btn_share">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_screenshot"
                android:background="@color/white"
                android:padding="@dimen/dp10">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_icon_rl">
                        <in.co.eko.fundu.views.CircleImageView
                            android:id="@+id/user_image"
                            android:layout_width="@dimen/dp60"
                            android:layout_height="@dimen/dp60"
                            android:layout_centerVertical="true"
                            android:src="@drawable/user_image_white"
                            />
                        <TextView
                            android:textColor="@color/White"
                            android:id="@+id/user_initial"
                            android:layout_width="@dimen/dp60"
                            android:layout_height="@dimen/dp60"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textSize="@dimen/sp25"
                            android:visibility="gone"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp16"
                        android:layout_marginTop="@dimen/dp4"
                        android:layout_toRightOf="@+id/user_icon_rl"
                        android:layout_toLeftOf="@+id/tv_amt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <in.co.eko.fundu.views.customviews.CustomTextView
                            android:id="@+id/user_name"
                            android:layout_marginRight="@dimen/dp16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="Hover"
                            android:text=""
                            android:maxLines="2"
                            app:fontname="Muli-Regular.ttf"
                            android:textColor="@color/black87"
                            android:textSize="@dimen/sp15" />

                        <in.co.eko.fundu.views.customviews.CustomTextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp16"
                            android:tag="Hover"
                            android:layout_below="@+id/user_name"
                            app:fontname="Muli-Regular.ttf"
                            android:textColor="@color/purpley_grey"
                            android:textStyle="bold"
                            android:text=""
                            android:textSize="@dimen/sp14" />


                    </LinearLayout>

                    <in.co.eko.fundu.views.customviews.CustomTextView
                        android:id="@+id/tv_amt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:fontname="Muli-Regular.ttf"
                        android:layout_marginRight="@dimen/dp5"
                        android:textStyle="bold"
                        android:text=""
                        android:textColor="@color/black87"
                        android:textSize="@dimen/text_sizes_smallest" />

                    <ImageView
                        android:layout_width="@dimen/dp17"
                        android:layout_height="@dimen/dp17"
                        android:padding="@dimen/dp2"
                        android:layout_marginRight="@dimen/dp25"
                        android:layout_toRightOf="@+id/user_icon_rl"
                        android:layout_marginLeft="@dimen/dpneg25"
                        android:layout_alignTop="@+id/user_icon_rl"
                        android:id="@+id/txn_tag"
                        android:background="@drawable/white_circle"
                        app:srcCompat="@drawable/ic_history_arrow_credit"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp150"
                    android:layout_marginTop="@dimen/dp15"
                    android:id="@+id/map_layout">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp150"
                        android:id="@+id/map_screenshot"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_map_pin"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp75"/>
                </RelativeLayout>



                <in.co.eko.fundu.views.customviews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_transaction_details"
                    app:fontname="Muli-Regular.ttf"
                    android:textSize="@dimen/sp10"
                    android:textColor="@color/purpley_grey"
                    android:layout_marginTop="@dimen/dp30"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16">
                    <in.co.eko.fundu.views.customviews.CustomTextView
                        android:id="@+id/fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/sp16"
                        app:fontname="Muli-Regular.ttf"
                        android:textColor="@color/black87" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/rating_layout"
                        android:layout_alignParentRight="true">
                        <in.co.eko.fundu.views.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/you_rated"
                            android:textSize="@dimen/sp12"
                            app:fontname="Muli-Regular.ttf"
                            android:textColor="@color/purpley_grey"/>
                        <RatingBar
                            android:id="@+id/rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="?android:attr/ratingBarStyleSmall"
                            android:numStars="5"
                            android:stepSize="1"
                            android:isIndicator="true" />
                    </LinearLayout>
                </RelativeLayout>

                <in.co.eko.fundu.views.customviews.CustomTextView
                    android:id="@+id/txn_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txnid"
                    android:textSize="@dimen/sp14"
                    app:fontname="Muli-Regular.ttf"
                    android:textColor="@color/greyish_brown"
                    android:layout_marginTop="@dimen/dp6"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_reward"
                    android:layout_marginTop="@dimen/dp6"
                    android:visibility="gone">
                    <in.co.eko.fundu.views.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cash_received"
                        app:fontname="Muli-Regular.ttf"
                        android:textSize="@dimen/sp12"
                        android:textColor="@color/purpley_grey"/>

                    <in.co.eko.fundu.views.customviews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/reward_amt"
                        android:textSize="@dimen/sp14"
                        app:fontname="Muli-Regular.ttf"
                        android:textColor="@color/purpley_grey"
                        android:layout_alignParentRight="true"
                        android:text=""/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout_txn_success"
                    android:layout_marginTop="@dimen/dp6"
                    android:visibility="visible">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <in.co.eko.fundu.views.customviews.CustomTextView
                            android:id="@+id/tv_cash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cash_received"
                            app:fontname="Muli-Regular.ttf"
                            android:textSize="@dimen/sp12"
                            android:textColor="@color/purpley_grey"/>

                        <in.co.eko.fundu.views.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cash_received_amt"
                            android:textSize="@dimen/sp14"
                            app:fontname="Muli-Regular.ttf"
                            android:textColor="@color/purpley_grey"
                            android:layout_alignParentRight="true"
                            android:text=""/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5">
                        <in.co.eko.fundu.views.customviews.CustomTextView
                            android:id="@+id/tv_txn_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txn_fee"
                            android:textSize="@dimen/sp12"
                            app:fontname="Muli-Regular.ttf"
                            android:textColor="@color/purpley_grey"/>
                        <in.co.eko.fundu.views.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txn_fee_amt"
                            android:text=""
                            android:textColor="@color/purpley_grey"
                            android:textSize="@dimen/sp14"
                            app:fontname="Muli-Regular.ttf"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp15">

                        <in.co.eko.fundu.views.customviews.CustomTextView
                            android:id="@+id/tv_you_paid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontname="Muli-Regular.ttf"
                            android:textSize="@dimen/sp12"
                            android:textColor="@color/purpley_grey"
                            android:text="@string/you_paid"/>

                        <in.co.eko.fundu.views.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/you_paid_amt"
                            app:fontname="Muli-Regular.ttf"
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/purpley_grey"
                            android:text=""
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp16"
                    android:id="@+id/layout_txn_failed"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <in.co.eko.fundu.views.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/amt_debited"
                            app:fontname="Muli-Regular.ttf"
                            android:textSize="@dimen/sp12"
                            android:textColor="@color/purpley_grey"/>
                        <in.co.eko.fundu.views.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/amt_debited_value"
                            app:fontname="Muli-Regular.ttf"
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/purpley_grey"
                            android:text=""
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp4">
                        <in.co.eko.fundu.views.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp13"
                            app:fontname="Muli-Regular.ttf"
                            android:textColor="@color/black_two"
                            android:text="@string/status"/>
                        <in.co.eko.fundu.views.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txn_status"
                            app:fontname="Muli-Regular.ttf"
                            android:textSize="@dimen/sp13"
                            android:textColor="@color/topaz_two"
                            android:text=""/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <in.co.eko.fundu.views.customviews.CustomTextView
                android:id="@+id/report_issue"
                android:text="@string/report_issue"
                android:layout_marginRight="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="Hover"
                android:padding="@dimen/dp10"
                android:background="@drawable/needhelp"
                android:backgroundTint="@color/report_issue_color"
                android:layout_gravity="end"
                app:fontname="Muli-Regular.ttf"
                android:textColor="@color/purpley_grey"
                android:textSize="@dimen/sp12"
                android:layout_marginTop="@dimen/dp16"/>



        </LinearLayout>

    </ScrollView>

    <in.co.eko.fundu.views.customviews.CustomButton
        android:id="@+id/btn_share"
        style="@style/ButtonStyle"
        android:layout_width="@dimen/dp250"
        android:layout_height="@dimen/dp55"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp10"
        android:background="@drawable/green_button_selector"
        android:text="@string/share"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:textSize="@dimen/sp20"
        android:visibility="visible"
        app:fontname="Muli-Regular.ttf"/>





</RelativeLayout>