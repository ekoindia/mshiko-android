                        android:layout_weight="1"/>

                    <in.co.eko.fundu.views.customviews.CustomEditText
                        android:id="@+id/editText7"
                        android:background="@drawable/code_letter_back"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="3"
                        app:fontname="OCR A Std.ttf"
                        android:textColor="@color/Black"
                        android:ems="1"
                        android:maxLength="1"
                        android:maxEms="1"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:layout_marginRight="@dimen/dp3"
                        android:gravity="center"
                        android:textSize="@dimen/sp14"
                        android:layout_weight="1"/>

                    <in.co.eko.fundu.views.customviews.CustomEditText
                        android:id="@+id/editText8"
                        android:background="@drawable/code_letter_back"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="4"
                        app:fontname="OCR A Std.ttf"
                        android:textColor="@color/Black"
                        android:ems="1"
                        android:maxLength="1"
                        android:maxEms="1"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:gravity="center"
                        android:textSize="@dimen/sp14"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:layout_marginLeft="@dimen/dp8"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <in.co.eko.fundu.views.customviews.CustomEditText
                        android:id="@+id/editText9"
                        android:background="@drawable/code_letter_back"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="1"
                        android:ems="1"
                        app:fontname="OCR A Std.ttf"
                        android:maxLength="1"
                        android:maxEms="1"
                        android:textColor="@color/Black"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:layout_marginRight="@dimen/dp3"
                        android:gravity="center"
                        android:textSize="@dimen/sp14"
                        android:layout_weight="1"/>

                    <in.co.eko.fundu.views.customviews.CustomEditText
                        android:id="@+id/editText10"
                        android:background="@drawable/code_letter_back"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="2"
                        android:textColor="@color/Black"
                        android:ems="1"
                        android:maxLength="1"
                        android:maxEms="1"
                        app:fontname="OCR A Std.ttf"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:layout_marginRight="@dimen/dp3"
                        android:gravity="center"
                        android:textSize="@dimen/sp14"
                        android:layout_weight="1"/>

                    <in.co.eko.fundu.views.customviews.CustomEditText
                        android:id="@+id/editText11"
                        android:background="@drawable/code_letter_back"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="3"
                        android:textColor="@color/Black"
                        android:ems="1"
                        app:fontname="OCR A Std.ttf"
                        android:maxLength="1"
                        android:maxEms="1"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:layout_marginRight="@dimen/dp3"
                        android:gravity="center"
                        android:textSize="@dimen/sp14"
                        android:layout_weight="1"/>

                    <in.co.eko.fundu.views.customviews.CustomEditText
                        android:id="@+id/editText12"
                        android:background="@drawable/code_letter_back"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="4"
                        android:ems="1"
                        app:fontname="OCR A Std.ttf"
                        android:textColor="@color/Black"
                        android:maxLength="1"
                        android:maxEms="1"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:gravity="center"
                        android:textSize="@dimen/sp14"

                        android:layout_weight="1"/>

                </LinearLayout>


            </LinearLayout>

             <LinearLayout
                 android:layout_marginRight="@dimen/dp10"
                 android:layout_marginLeft="@dimen/dp10"
                 android:orientation="horizontal"
                 android:weightSum="3"
                 android:layout_weight="1"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp30">

                 <LinearLayout
                     android:id="@+id/linearLayout4"
                     android:layout_weight="1"
                     android:orientation="horizontal"
                     android:weightSum="4"
                     android:layout_width="0dp"

                     android:layout_height="wrap_content">
                     <in.co.eko.fundu.views.customviews.CustomEditText
                         android:id="@+id/editText13"
                         android:background="@drawable/code_letter_back"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:hint="1"
                         android:textColor="@color/Black"
                         android:ems="1"
                         app:fontname="OCR A Std.ttf"
                         android:maxLength="1"
                         android:maxEms="1"
                         android:inputType="number"
                         android:imeOptions="actionNext"
                         android:layout_marginRight="@dimen/dp3"
                         android:gravity="center"
                         android:textSize="@dimen/sp14"
                         android:layout_weight="1"/>

                     <in.co.eko.fundu.views.customviews.CustomEditText
                         android:id="@+id/editText14"
                         android:background="@drawable/code_letter_back"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:hint="2"
                         android:ems="1"
                         app:fontname="OCR A Std.ttf"
                         android:maxLength="1"
                         android:maxEms="1"
                         android:textColor="@color/Black"
                         android:inputType="number"
                         android:imeOptions="actionNext"
                         android:layout_marginRight="@dimen/dp3"
                         android:gravity="center"
                         android:textSize="@dimen/sp14"
                         android:layout_weight="1"/>

                     <in.co.eko.fundu.views.customviews.CustomEditText
                         android:id="@+id/editText15"
                         android:background="@drawable/code_letter_back"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:hint="3"
                         android:ems="1"
                         app:fontname="OCR A Std.ttf"
                         android:maxLength="1"
                         android:maxEms="1"
                         android:textColor="@color/Black"
                         android:inputType="number"
                         android:imeOptions="actionNext"
                         android:layout_marginRight="@dimen/dp3"
                         android:gravity="center"
                         android:textSize="@dimen/sp14"
                         android:layout_weight="1"/>

                     <in.co.eko.fundu.views.customviews.CustomEditText
                         android:id="@+id/editText16"
                         android:background="@drawable/code_letter_back"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:hint="4"
                         app:fontname="OCR A Std.ttf"
                         android:textColor="@color/Black"
                         android:ems="1"
                         android:maxLength="1"
                         android:maxEms="1"
                         android:inputType="number"
                         android:imeOptions="actionNext"
                         android:gravity="center"
                         android:textSize="@dimen/sp14"
                         android:layout_weight="1"/>

                 </LinearLayout>

             </LinearLayout>







        </LinearLayout>


        <in.co.eko.fundu.views.customviews.CustomTextView
            android:id="@+id/edittext_expiry"
            android:layout_marginTop="@dimen/dp5"
            android:layout_below="@+id/linearLayout_card"
            android:layout_marginLeft="@dimen/dp10"
            android:textSize="@dimen/sp10"
            android:textColor="@color/warm_grey_three"
            android:text="@string/expiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <RelativeLayout
            android:layout_below="@+id/edittext_expiry"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <in.co.eko.fundu.views.customviews.CustomEditText
                    android:id="@+id/editText_Month1"
                    android:background="@drawable/code_letter_back"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp30"
                    android:hint="3"
                    app:fontname="OCR A Std.ttf"
                    android:textColor="@color/Black"
                    android:ems="1"
                    android:maxLength="1"
                    android:maxEms="1"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:layout_marginRight="@dimen/dp2"
                    android:gravity="center"
                    android:textSize="@dimen/sp14"
                    />

                <in.co.eko.fundu.views.customviews.CustomEditText
                    android:id="@+id/editText_Month2"
                    android:background="@drawable/code_letter_back"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp30"
                    android:hint="4"
                    android:textColor="@color/Black"
                    android:ems="1"
                    app:fontname="OCR A Std.ttf"
                    android:maxLength="1"
                    android:maxEms="1"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:gravity="center"
                    android:textSize="@dimen/sp14"
                    android:layout_weight="1"/>

                <TextView


                    android:layout_width="@dimen/dp16"
                    android:layout_height="match_parent"
                    android:text="/"
                    android:gravity="center"
                    android:textSize="@dimen/sp12"
                    android:layout_weight="1"/>

                <in.co.eko.fundu.views.customviews.CustomEditText
                    android:id="@+id/editText_Year1"
                    android:background="@drawable/code_letter_back"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp30"
                    android:hint="4"
                    android:maxLength="1"
                    android:textColor="@color/Black"
                    android:maxEms="1"
                    app:fontname="OCR A Std.ttf"
                    android:inputType="number"
                    android:layout_marginRight="@dimen/dp2"
                    android:gravity="center"
                    android:textSize="@dimen/sp14"
                    android:layout_weight="1"/>

