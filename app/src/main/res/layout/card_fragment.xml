                android:layout_gravity="right"
                app:srcCompat="@drawable/ic_bank_logo"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <ImageView
                android:layout_below="@+id/imageview_bank"
                app:srcCompat="@drawable/ic_chip"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="@dimen/dp5"
                android:id="@+id/linearLayout_card"
                android:layout_centerInParent="true"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <LinearLayout
                android:layout_weight="1"

                android:layout_margin="@dimen/dp10"
                android:orientation="horizontal"
                android:weightSum="3"

                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30">

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <in.co.eko.fundu.views.customviews.CustomEditText
                        android:id="@+id/editText1"
                        android:background="@drawable/code_letter_back"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="1"
                        app:fontname="OCR A Std.ttf"
                        android:ems="1"
                        android:maxLength="1"
                        android:maxEms="1"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:textColor="@color/Black"
                        android:layout_marginRight="@dimen/dp3"
                        android:gravity="center"
                        android:textSize="@dimen/sp14"
                        android:layout_weight="1"/>

                    <in.co.eko.fundu.views.customviews.CustomEditText
                        android:id="@+id/editText2"
                        android:background="@drawable/code_letter_back"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="2"
                        android:textColor="@color/Black"
                        android:ems="1"
                        app:fontname="OCR A Std.ttf"
                        android:maxLength="1"
                        android:maxEms="1"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:layout_marginRight="@dimen/dp3"
                        android:gravity="center"
                        android:textSize="@dimen/sp14"
                        android:layout_weight="1"/>

                    <in.co.eko.fundu.views.customviews.CustomEditText
