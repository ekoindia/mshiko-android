<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/White">


    <RelativeLayout
        android:id="@+id/linearLayout_header"

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">


        <ImageView
            android:padding="@dimen/dp10"
            android:id="@+id/imageview_back"

            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <in.co.eko.fundu.views.customviews.CustomTextView
            android:id="@+id/textView_referral_title"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageview_back"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:lineSpacingExtra="1sp"
            android:textColor="@color/topaz_two"
            android:textSize="@dimen/sp22"
            app:fontname="Muli-SemiBold.ttf"
            android:text="@string/title_help" />



    </RelativeLayout>

    <View
        android:layout_below="@+id/linearLayout_header"
        android:background="@color/white_six"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/helpList"
        android:layout_marginTop="@dimen/dp5"
        android:layout_below="@+id/linearLayout_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>






</RelativeLayout>
