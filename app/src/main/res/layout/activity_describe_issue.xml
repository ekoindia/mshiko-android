<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/White">


    <RelativeLayout
        android:id="@+id/linearLayout_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">


        <ImageView
            android:padding="@dimen/dp10"
            android:id="@+id/imageview_back"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>


    <in.co.eko.fundu.views.customviews.CustomTextView
        android:id="@+id/title"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp38"
        android:layout_below="@+id/linearLayout_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp22"
        app:fontname="Muli-Regular.ttf"
        android:textColor="@color/Black"
        android:text="@string/describe_issue"
        />



    <in.co.eko.fundu.views.customviews.CustomEditText
        android:focusable="true"
        android:inputType="textMultiLine"
        android:id="@+id/edit_issue"

        android:imeOptions="actionDone"
        android:maxEms="160"
        android:maxLength="160"
        android:gravity="start"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp38"
        android:layout_marginRight="@dimen/dp38"

        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:paddingTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp180"
        android:textSize="@dimen/sp16"
        android:textColor="@color/greyish"
        android:background="@drawable/edittextbckgrnd"
        />


    <in.co.eko.fundu.views.customviews.CustomTextView
        android:id="@+id/textLength"
        android:layout_below="@+id/edit_issue"
        android:layout_marginTop="@dimen/dp10"
        android:layout_alignParentRight="true"


        android:layout_marginRight="@dimen/dp50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp15"
        android:textColor="@color/greyish"

        />



    <in.co.eko.fundu.views.customviews.CustomButton
        app:fontname="Muli-Regular.ttf"
        android:id="@+id/done"
        android:layout_width="@dimen/dp200"
        android:layout_height="@dimen/dp60"
        android:textAllCaps="false"
        android:layout_below="@+id/edit_issue"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginTop="@dimen/dp50"
        android:background="@drawable/btn_backgrnd"
        android:gravity="center"
        android:text="@string/done"
        android:textColor="@color/White"
        android:textSize="@dimen/sp20"

        />


</RelativeLayout>
