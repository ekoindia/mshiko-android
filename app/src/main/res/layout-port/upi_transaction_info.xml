<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <in.co.eko.fundu.views.customviews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp20"
        android:textSize="@dimen/sp20"
        app:fontname="Muli-Regular.ttf"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/upi_transaction_info_title"/>


    <in.co.eko.fundu.views.customviews.CustomTextView
        android:id="@+id/upi_auth_details_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp10"
        android:textSize="@dimen/sp17"
        app:fontname="Muli-Regular.ttf"
        android:gravity="center"
        android:layout_margin="@dimen/dp10"
        android:textColor="@color/black_38"
        android:text="@string/upi_auth_details"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:layout_gravity="center_horizontal">

        <in.co.eko.fundu.views.customviews.CustomTextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/name_initial"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp25"
            app:fontname="Muli-Regular.ttf"
            android:gravity="center"
            android:layout_margin="@dimen/dp10"
            android:textColor="@color/white"
            android:background="@drawable/userinitialback"
            android:text="A"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_38"
            android:text="--------------------->"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/name_initial"
            android:id="@+id/arrowright"
            android:layout_margin="@dimen/dp10"/>
        
        
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/arrowright"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_logo"/>

    </RelativeLayout>


    <in.co.eko.fundu.views.customviews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp20"
        android:textSize="@dimen/sp14"
        app:fontname="Muli-Regular.ttf"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_margin="@dimen/dp10"
        android:textColor="@color/black_38"
        android:text="@string/refund_info"/>


    <in.co.eko.fundu.views.customviews.CustomButton
        app:fontname="Muli-Regular.ttf"
        android:textAllCaps="false"
        android:id="@+id/i_understand"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20"
        android:paddingTop="@dimen/dp15"
        android:paddingBottom="@dimen/dp15"
        android:layout_below="@+id/moblile_container"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="60dp"
        android:background="@drawable/green_button_selector"
        android:enabled="true"
        android:textSize="@dimen/sp20"
        android:text="@string/i_understand"
        android:layout_marginBottom="@dimen/dp20"
        />



</LinearLayout>